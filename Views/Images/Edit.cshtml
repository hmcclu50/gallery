@model farris_art_gallery.Models.Image

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Image</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Exhibit" />
            <input type="hidden" asp-for="ImageFile"/>
            <input type="hidden" asp-for="ImageName" />
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Forward" class="control-label"></label>
                <input asp-for="Forward" class="form-control" />
                <span asp-validation-for="Forward" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Backward" class="control-label"></label>
                <input asp-for="Backward" class="form-control" />
                <span asp-validation-for="Backward" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Left" class="control-label"></label>
                <input asp-for="Left" class="form-control" />
                <span asp-validation-for="Left" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Right" class="control-label"></label>
                <input asp-for="Right" class="form-control" />
                <span asp-validation-for="Right" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
