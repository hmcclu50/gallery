@model farris_art_gallery.Models.Exhibit

@{
    ViewData["Title"] = "Details";
}

<script async src="https://unpkg.com/es-module-shims@1.3.6/dist/es-module-shims.js"></script>
<script type="importmap">
    {
        "imports": {
        "three": "https://unpkg.com/three@0.142.0/build/three.module.js"
        }
    }
</script>

<style>
    .full-screen {
        position: absolute;
        left: 0;
        right: 0;
        top: 56px;
        bottom: 0;
    }
</style>

<div id="webglviewer" class="full-screen"></div>

<script type="module">
    import * as THREE from 'three';
    import { OrbitControls } from 'https://unpkg.com/three@0.142.0/examples/jsm/controls/OrbitControls.js';
    
    // initializing renderer
    
    var renderer = new THREE.WebGLRenderer();
    renderer.setPixelRatio(window.devicePixelRatio);
    renderer.setSize(window.innerWidth, window.innerHeight);
    document.getElementById('webglviewer').appendChild(renderer.domElement);
    
    // initializing scene and camera
    
    var scene = new THREE.Scene();
    var camera = new THREE.PerspectiveCamera(
        75,
        window.innerWidth / window.innerHeight,
        1,
        1000000
    );
    camera.position.set(0, 0, 0);
    camera.lookAt(-10, 0, 0);
    
    // setting up mouse controls
    
    var controls = new OrbitControls(camera, renderer.domElement);
    controls.target.set(camera.position.x + .1, camera.position.y, camera.position.z);
    controls.rotateSpeed = -0.15;
    controls.enableDamping = true;
    
    animate();
        
    function animate() {
        requestAnimationFrame(animate);
        controls.update();
        renderer.render(scene, camera);
    }    
    
    // initialize navigation buttons
    
    var navigationMaterial = new THREE.MeshBasicMaterial({
        color: 0xffff00
    });
    var navigationGeometry = new THREE.SphereBufferGeometry(0.15, 32, 32);
    
    var navigationNorth = new THREE.Mesh(navigationGeometry, navigationMaterial);
    var navigationSouth = new THREE.Mesh(navigationGeometry, navigationMaterial);
    var navigationEast = new THREE.Mesh(navigationGeometry, navigationMaterial);
    var navigationWest = new THREE.Mesh(navigationGeometry, navigationMaterial);
    
    navigationNorth.position.set(-2.5,-1,0);
    navigationSouth.position.set(2.5,-1,0);
    navigationEast.position.set(0,-1,-2.5);
    navigationWest.position.set(0,-1,2.5);
    
    scene.add(navigationNorth);
    scene.add(navigationSouth);
    scene.add(navigationEast);
    scene.add(navigationWest);
    
    // creating image viewer and adding initial background
    
    let curImage = new Object();
    await apiRequest(@Model.Images.FirstOrDefault(i => i.IsStart == 1).Id);    
    var backgroundUrl = "/img/" + curImage.ImageName;
            
    function loadSphere(url){
      var loader = new THREE.TextureLoader();
      loader.load(
          url,
          function (texture) {
              var sphereMaterial = new THREE.MeshBasicMaterial({
                  map: texture
              });
              var sphereGeometry = new THREE.SphereBufferGeometry(3, 32, 32);
              sphereGeometry.scale(-1, 1, 1);
              var sphere = new THREE.Mesh(sphereGeometry, sphereMaterial);
              scene.add(sphere);
          }
      );  
    }
    
    loadSphere(backgroundUrl);
    
    updateVisibility();
    
    renderer.render(scene, camera);
    
    // Events
        
    var raycaster = new THREE.Raycaster();
    var mouse = new THREE.Vector2();
    
    async function onMouseClick(event) {
        raycaster.setFromCamera(mouse, camera);
        if (raycaster.intersectObject(navigationNorth).length > 0){
            await apiRequest(curImage.NorthId);
            updateVisibility();
            loadSphere(backgroundUrl);
            renderer.render(scene, camera);
        }
        else if (raycaster.intersectObject(navigationSouth).length > 0){
            await apiRequest(curImage.SouthId);
            updateVisibility();
            loadSphere(backgroundUrl);
            renderer.render(scene, camera);
        }
        else if (raycaster.intersectObject(navigationEast).length > 0){
            await apiRequest(curImage.EastId);
            updateVisibility();
            loadSphere(backgroundUrl);
            renderer.render(scene, camera);
        }
        else if (raycaster.intersectObject(navigationWest).length > 0){
            await apiRequest.curImage(WestId);
            updateVisibility();
            loadSphere(backgroundUrl);
            renderer.render(scene, camera);
        }
    }    
    
    function updateVisibility(){
        if (curImage.NorthId != null){
            navigationNorth.visible = true;
        }
        else{
            navigationNorth.visible = false;
        }
        
        if (curImage.SouthId != null){
            navigationSouth.visible = true;
        }
        else{
            navigationSouth.visible = false;
        }
        
        if (curImage.EastId != null){
            navigationEast.visible = true;
        }
        else{
            navigationEast.visible = false;
        }
        
        if (curImage.WestId != null){
            navigationWest.visible = true;
        }
        else{
            navigationWest.visible = false;
        }
    }
    
    function onMouseMove(event) {
        mouse.x = ( event.clientX / window.innerWidth ) * 2 - 1;
        mouse.y = - ( event.clientY / window.innerHeight) * 2 + 1 + 2 * (56 / window.innerHeight);
    }
    
    function onWindowResize() {
        camera.aspect = window.innerWidth / window.innerHeight;
        camera.updateProjectionMatrix();
        renderer.setSize(window.innerWidth, window.innerHeight);
    }
    
    async function apiRequest(imageId){
        await fetch('/api/Image/' + imageId)
            .then((response) => response.json())
            .then((data) => {
                curImage = data;
                backgroundUrl = "/img/" + data.ImageName;
            }
        );
    }
    
    window.addEventListener('mouseup', onMouseClick, false);
    window.addEventListener('mousemove', onMouseMove,  false);
    window.addEventListener('resize', onWindowResize, false);
</script>