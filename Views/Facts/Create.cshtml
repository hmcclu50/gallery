@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model farris_art_gallery.Models.Fact
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Create";
}

@if (!SignInManager.IsSignedIn(User))
{
    <h4>You do not have permission to view this page.</h4>
}
else
{
    <h1>Create</h1>

    <h4>Fact</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ExhibitId" class="control-label"></label>
                    <input asp-for="ExhibitId" class="form-control" />
                    <span asp-validation-for="ExhibitId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ArtistId" class="control-label"></label>
                    <input asp-for="ArtistId" class="form-control" />
                    <span asp-validation-for="ArtistId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ArtworkId" class="control-label"></label>
                    <input asp-for="ArtworkId" class="form-control" />
                    <span asp-validation-for="ArtworkId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}
